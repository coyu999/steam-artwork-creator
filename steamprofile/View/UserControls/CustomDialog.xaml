<Window x:Class="steamprofile.View.CustomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:steamprofile.View"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        Title="Open" Height="159" Width="288">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="42"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Width="32" Height="32" x:Name="boxIcon" Margin="20,0,0,0"/>
            <TextBlock Grid.Column="1" Name="tbQuestion" HorizontalAlignment="Left"
                       VerticalAlignment="Center" Margin="5,0,0,0" TextWrapping="Wrap"
                       FontSize="12"/>
        </Grid>
        <Image Width="32" Height="32" x:Name="QuestionImage" HorizontalAlignment="Left"/>
        <Rectangle Fill="#F0F0F0" Grid.Row="1"/>
        <Button Name="btnOne" Grid.Row="1" Width="75" Height="23" HorizontalAlignment="Right"
                Margin="0,0,99,0" FontSize="12" Click="btnOne_Click"/>
        <Button Name="btnTwo" Grid.Row="1" Width="75" Height="23" HorizontalAlignment="Right"
                Margin="0,0,15,0" FontSize="12" Click="btnTwo_Click"/>
        <Button Name="btnDone" Grid.Row="1" Width="75" Height="23" HorizontalAlignment="Right"
                Margin="0,0,183,0" FontSize="12" Click="btnDone_Click"
                Content="Done"/>

    </Grid>
</Window>
